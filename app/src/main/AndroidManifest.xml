<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.snhoward.flicks">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/film_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/film_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MovieOpening">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MovieDetailsActivity" />
        <activity android:name=".MovieTrailerActivity" />
        <activity android:name=".MovieListActivity"></activity>
    </application>

</manifest>